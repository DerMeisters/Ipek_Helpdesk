@model Ipek_Helpdesk.Tickets.TicketDto
@{

}

<div class="alert alert-info" role="alert">
    You may either delete the ticket or assign it to an agent!
</div>

<dl class="dl-horizontal">
    <dt>Sender</dt> <dd>@Model.CreatedBy</dd>
    <dt>Subject</dt> <dd>@Model.Subject</dd>
    <dt>Message</dt> <dd>@Model.Body</dd>
</dl>

<p style="text-align: center; padding-top: 15px;">
    <a href="javascript: Assign(@Model.Id);" class="btn btn-default">
        <span class="glyphicon glyphicon-user"></span> Assign
    </a>

    <a href="javascript: Delete(@Model.Id);" class="btn btn-danger" onclick="return confirm('You sure you want to delete?');">
        <span class="glyphicon glyphicon-trash"></span> Delete
    </a>
</p>
